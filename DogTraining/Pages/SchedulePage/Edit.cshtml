@page
@model DogTraining.Pages.SchedulePage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Schedule.SchedID" />
            <div class="form-group">
                <label asp-for="Schedule.DogID" class="control-label"></label>
                <select asp-for="Schedule.DogID" class="form-control" asp-items="ViewBag.DogID"></select>
                <span asp-validation-for="Schedule.DogID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.TrainerID" class="control-label"></label>
                <select asp-for="Schedule.TrainerID" class="form-control" asp-items="ViewBag.TrainerID"></select>
                <span asp-validation-for="Schedule.TrainerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Date" class="control-label"></label>
                <input asp-for="Schedule.Date" class="form-control" />
                <span asp-validation-for="Schedule.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Time" class="control-label"></label>
                <input asp-for="Schedule.Time" class="form-control" />
                <span asp-validation-for="Schedule.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Notes" class="control-label"></label>
                <input asp-for="Schedule.Notes" class="form-control" />
                <span asp-validation-for="Schedule.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
