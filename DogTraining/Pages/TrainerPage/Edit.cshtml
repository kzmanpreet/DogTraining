@page
@model DogTraining.Pages.TrainerPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<!-- I added an image to make it easy to see which page you are on-->
<img src="~/images/DogWalking.jpg" style="width:100%" />

<h4>Trainer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Trainer.TrainerID" />
            <div class="form-group">
                <label asp-for="Trainer.FirstName" class="control-label"></label>
                <input asp-for="Trainer.FirstName" class="form-control" />
                <span asp-validation-for="Trainer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.LastName" class="control-label"></label>
                <input asp-for="Trainer.LastName" class="form-control" />
                <span asp-validation-for="Trainer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.Phone" class="control-label"></label>
                <input asp-for="Trainer.Phone" class="form-control" />
                <span asp-validation-for="Trainer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.Address" class="control-label"></label>
                <input asp-for="Trainer.Address" class="form-control" />
                <span asp-validation-for="Trainer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
