@page
@model DogTraining.Pages.TrainerPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- I added an image to make it easy to see which page you are on-->
<img src="~/images/DogWalking.jpg" style="width:100%" />

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Trainer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TrainerID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TrainerID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TrainerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
