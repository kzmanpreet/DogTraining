@page
@model DogTraining.Pages.DogPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<!-- I added an image to make it easy to see which page you are on-->
<img src="~/images/RowOfDogs.jpg" style="width:100%" />

<h4>Dog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dog.DogID" />
            <div class="form-group">
                <label asp-for="Dog.Name" class="control-label"></label>
                <input asp-for="Dog.Name" class="form-control" />
                <span asp-validation-for="Dog.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Breed" class="control-label"></label>
                <input asp-for="Dog.Breed" class="form-control" />
                <span asp-validation-for="Dog.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.DOB" class="control-label"></label>
                <input asp-for="Dog.DOB" class="form-control" />
                <span asp-validation-for="Dog.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Gender" class="control-label"></label>
                <select asp-for="Dog.Gender" class="form-control">
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                </select>
                <span asp-validation-for="Dog.Gender" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Dog.Neutered" /> @Html.DisplayNameFor(model => model.Dog.Neutered)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Microchip" class="control-label"></label>
                <input asp-for="Dog.Microchip" class="form-control" />
                <span asp-validation-for="Dog.Microchip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
