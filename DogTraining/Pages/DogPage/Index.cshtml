@page
@model DogTraining.Pages.DogPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- I added an image to make it easy to see which page you are on-->
<img src="~/images/RowOfDogs.jpg" style="width:100%" />

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].Neutered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].Microchip)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dog)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Neutered)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Microchip)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.DogID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.DogID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.DogID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
